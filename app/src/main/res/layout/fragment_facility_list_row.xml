<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <Button
        android:id="@+id/btn_locate"
        android:layout_width="147dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/tv_facility_name"
        android:background="@drawable/btnshape"
        android:gravity="center"
        android:text="Locate Me"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_direction"
        android:layout_width="147dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="265dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btnshape"
        android:gravity="center"
        android:text="Get Direction"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_facility_name"
        android:layout_width="101dp"
        android:layout_height="49dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/tv_estimate_distance"
        android:text="Facility Name"
        app:layout_constraintStart_toEndOf="@id/btn_locate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_arriving_time"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:text="Estimate Time" />

    <TextView
        android:id="@+id/tv_estimate_distance"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/tv_arriving_time"
        android:text="Direct Distance" />

</RelativeLayout>