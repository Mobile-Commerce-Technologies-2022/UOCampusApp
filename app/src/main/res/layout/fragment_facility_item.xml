<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="150dp">

    <Button
        android:id="@+id/btn_locate_me"
        android:layout_width="147dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btnshape"
        android:gravity="center"
        android:text="Locate Me"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_get_direction"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:background="@drawable/btnshape"
        android:gravity="center"
        android:text="Get Direction"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_locate_me"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/tv_facility_item"
        android:layout_width="101dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:text="Facility Name"
        app:layout_constraintStart_toEndOf="@id/btn_locate_me"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_estimate_time"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:text="Estimate Time"
        app:layout_constraintStart_toEndOf="@+id/tv_direct_distance"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_direct_distance"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:text="Direct Distance"
        app:layout_constraintStart_toEndOf="@+id/tv_facility_item"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>